{
  "color": {
    "base": {
      "gray": {
        "100": {
          "$type": "color",
          "$value": "#f5f5f5"
        },
        "900": {
          "$type": "color",
          "$value": "#1a1a1a"
        }
      },
      "primary": {
        "$type": "color",
        "$value": "#0066cc"
      }
    },
    "semantic": {
      "$ref": "#/color/base",
      "text": {
        "primary": {
          "$type": "color",
          "$value": {
            "light": "{color.base.gray.900}",
            "dark": "{color.base.gray.100}"
          }
        },
        "secondary": {
          "$type": "color",
          "$value": {
            "light": "#666666",
            "dark": "#999999"
          }
        }
      },
      "surface": {
        "default": {
          "$type": "color",
          "$value": {
            "light": "#ffffff",
            "dark": "#000000"
          }
        }
      }
    }
  },
  "spacing": {
    "base": {
      "small": {
        "$type": "dimension",
        "$value": "8px"
      },
      "medium": {
        "$type": "dimension",
        "$value": "16px"
      },
      "large": {
        "$type": "dimension",
        "$value": "24px"
      }
    },
    "semantic": {
      "component": {
        "gap": {
          "sm": {
            "$type": "dimension",
            "$value": "{spacing.base.small}"
          },
          "md": {
            "$type": "dimension",
            "$value": "{spacing.base.medium}"
          }
        }
      }
    }
  },
  "font": {
    "family": {
      "primary": {
        "$type": "fontFamily",
        "$value": "Roboto"
      },
      "secondary": {
        "$type": "fontFamily",
        "$value": ["Roboto", "Helvetica", "Arial", "sans-serif"]
      }
    },
    "weight": {
      "normal": {
        "$type": "fontWeight",
        "$value": 400
      },
      "bold": {
        "$type": "fontWeight",
        "$value": 700
      }
    },
    "size": {
      "base": {
        "$type": "dimension",
        "$value": "16px"
      },
      "lg": {
        "$type": "dimension",
        "$value": "24px"
      }
    }
  },
  "duration": {
    "fast": {
      "$type": "duration",
      "$value": "200ms"
    },
    "slow": {
      "$type": "duration",
      "$value": "500ms"
    }
  },
  "easing": {
    "default": {
      "$type": "cubicBezier",
      "$value": [0.25, 0.1, 0.25, 1]
    },
    "ease-in": {
      "$type": "cubicBezier",
      "$value": [0.42, 0, 1, 1]
    }
  },
  "border": {
    "default": {
      "$type": "border",
      "$value": {
        "width": { "value": 1, "unit": "px" },
        "color": "#e0e0e0",
        "style": "solid"
      }
    },
    "thick": {
      "$type": "border",
      "$value": {
        "width": { "value": 2, "unit": "px" },
        "color": "{color.semantic.text.secondary}",
        "style": "solid"
      }
    }
  },
  "transition": {
    "default": {
      "$type": "transition",
      "$value": {
        "duration": "{duration.fast}",
        "delay": "0ms",
        "timingFunction": "{easing.default}"
      }
    }
  },
  "shadow": {
    "small": {
      "$type": "shadow",
      "$value": {
        "color": "rgba(0, 0, 0, 0.1)",
        "offsetX": { "value": 0, "unit": "px" },
        "offsetY": { "value": 2, "unit": "px" },
        "blur": { "value": 4, "unit": "px" },
        "spread": { "value": 0, "unit": "px" }
      }
    },
    "large": {
      "$type": "shadow",
      "$value": {
        "color": "rgba(0, 0, 0, 0.2)",
        "offsetX": { "value": 0, "unit": "px" },
        "offsetY": { "value": 8, "unit": "px" },
        "blur": { "value": 16, "unit": "px" },
        "spread": { "value": 0, "unit": "px" }
      }
    }
  },
  "gradient": {
    "primary": {
      "$type": "gradient",
      "$value": [
        {
          "color": "{color.base.primary}",
          "position": 0
        },
        {
          "color": "#004499",
          "position": 1
        }
      ]
    }
  },
  "typography": {
    "heading": {
      "$type": "typography",
      "$value": {
        "fontFamily": "{font.family.primary}",
        "fontSize": "{font.size.lg}",
        "fontWeight": "{font.weight.bold}",
        "letterSpacing": { "value": 0, "unit": "px" },
        "lineHeight": 1.5
      }
    },
    "body": {
      "$type": "typography",
      "$value": {
        "fontFamily": "{font.family.primary}",
        "fontSize": "{font.size.base}",
        "fontWeight": "{font.weight.normal}",
        "letterSpacing": { "value": 0, "unit": "px" },
        "lineHeight": 1.2
      }
    }
  },
  "component": {
    "button": {
      "color": {
        "background": {
          "default": {
            "$type": "color",
            "$value": {
              "light": "{color.semantic.surface.default}",
              "dark": "{color.semantic.surface.default}"
            }
          }
        },
        "text": {
          "default": {
            "$type": "color",
            "$value": {
              "light": "{color.semantic.text.primary}",
              "dark": "{color.semantic.text.primary}"
            }
          }
        }
      },
      "border": {
        "default": {
          "$type": "border",
          "$value": "{border.default}"
        }
      },
      "spacing": {
        "padding": {
          "x": {
            "$type": "dimension",
            "$value": "{spacing.semantic.component.gap.md}"
          },
          "y": {
            "$type": "dimension",
            "$value": "{spacing.semantic.component.gap.sm}"
          }
        }
      }
    }
  }
}

